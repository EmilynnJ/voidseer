# Ensure package-lock.json is generated with exact versions
package-lock=true
package-lock-only=false

# Use the latest npm
engine-strict=true

# Use the package manager from the lockfile
auto-install-peers=true

# Prefer offline package installation for faster builds
prefer-offline=true

# Use the public npm registry
registry=https://registry.npmjs.org/

# Increase network timeout to 5 minutes
timeout=300000

# Disable package-lock.json for workspaces
workspaces-update=false

# Use the latest Node.js modules
node-version=18

# Ensure consistent dependency resolution
legacy-peer-deps=true

# Disable package audit during installation
audit=false

# Disable fund messages
fund=false

# Set the cache directory
cache=${HOME}/.npm

# Set the tmp directory
tmp=${TMPDIR}

# Set the user agent
user-agent=npm/{npm-version} node/{node-version} {platform} {arch} {ci}

# Set the log level
loglevel=error

# Set the color output
color=true

# Set the progress bar
progress=true

# Set the save exact
save-exact=true

# Set the save prefix
save-prefix=^

# Set the save exact
save=false

# Set the save dev
save-dev=false

# Set the save optional
save-optional=false

# Set the save peer
save-peer=false

# Set the save bundle
save-bundle=false

# Set the save prod
save-prod=false

